<!DOCTYPE html>
<html>
  <head>
    <title>Orenoude</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
    <h1 class="headline"><a>俺の腕とプロの腕</a></h1>
    <% if admin_store_signed_in? %>
     <ul class="nav-list">
     <li>
        <%= link_to "レシピ投稿", new_admin_recipe_path, method: :get %>
      </li>

      <li>
        <%= link_to "レシピ一覧", admin_recipes_path, method: :get %>
      </li>

      <li>
        <%= link_to "ログアウト", destroy_admin_store_session_path, method: :delete %>
      </li>
      <% elsif public_user_signed_in? %>
       <li>
        <%= link_to "ログアウト", destroy_public_user_session_path, method: :delete %>
      </li>
      <li>
        <%= link_to "いいねレシピ",public_recipes_path, method: :get %>
      </li>
    <% else %>
      <li>
        <%= link_to "ユーザー新規登録", new_public_user_registration_path %>
      </li>
      <li>
        <%= link_to "ユーザーログイン", new_public_user_session_path %>
      </li>

      <li>
        <%= link_to "店舗新規登録", new_admin_store_registration_path %>
      </li>
      <li>
        <%= link_to "店舗ログイン", new_admin_store_session_path %>
      </li>
    </ul>
    <% end %>
  </header>
  <body>
    <%= ENV['login_address'] %>
    <%= yield %>
  </body>
  <footer>
    orenoude to puronoude.inc
  </footer>
</html>
