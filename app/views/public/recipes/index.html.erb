<div class="backcolor">
<h1 class="good">いいねレシピ</h1>
<table>
  <tr>
    <th>イメージ</th>
    <th>レシピ名</th>
    <th>何人前</th>
    <th></th>
  </tr>
</table>
<%  @recipes.each do |recipe| %>
<table>
  <tr>
    <th><%= attachment_image_tag recipe, :image, :fill,300,200, format:'jpg' %></th>
    <th class="cooking_name"><%= recipe.cooking_name %></th>
    <th>￥<%= recipe.amount %></th>
    <th><%= link_to '詳細',public_recipe_path(recipe) %></th>
    <th><%= link_to "#{recipe.recipe_comments.count} コメント", public_recipe_path(recipe.id) %></th>
  </tr>
</table>
<% end %>
<%= paginate @recipes %>
</div>