<div class="backcolor">
  <h1>レシピ一覧</h1>
  <table>
    <tr>
      <th>イメージ</th>
      <th>レシピ名</th>
      <th>何人前</th>
      <th>      </th>

    </tr>
  </table>
  <% @recipes.each do |recipe| %>
  <table>
    <tr>
      <th><%= attachment_image_tag recipe, :image, :fill,200,100, format:'jpg' %></th>
  <th><%= recipe.cooking_name %></th>
  <th><%= recipe.amount %></th>
  <th><%= link_to '詳細',admin_recipe_path(recipe) %></th>
  </tr>
  </table>

  <% end %>
  <%= link_to'新規登録', new_admin_recipe_path %>
  <%= paginate @recipes %>
</div>