<div class="backcolor">
  <h1>お店情報</h1>
  <div class="container">
    <div class="row">
     <div class="col-lg-4" >
              <%= attachment_image_tag @store, :image, :fill,300,200, format:'jpg' %>
      </div>
     <div class="col-lg-8" >
          <table>
              <tr><th>店名</th><td>   <%= @store.name %></td></tr>
              <tr><th> url</th><td>  <%= Rinku.auto_link(@store.url, :all, 'target="_blank"').html_safe %></td></tr>
              <tr><th>一言</th><td>  <%= @store.phrase %></td></tr>
              <tr><th>ジャンル</th><td>  <%= @store.genre %></td></tr>
              <tr><th>地域</th><td>   <%= @store.area %></td></tr>
              <tr><th>最寄り駅</th><td>  <%= @store.station %></td></tr>
          </table>
     </div>
    </div>
     <%= link_to "編集",edit_admin_store_path, method: :get %>
</div>
</div>